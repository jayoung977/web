      <div id="chat-list" class="chat-list">
        <!--  임시 대화 데이터 -->
        <!-- <div class="my-chat">
            <div>user1: msg1</div>
          </div>
          <div class="other-chat">
            <div>user2: msg2</div>
          </div> -->
      </div>
      <select id="nick-list"></select
      >에게
      <input
        type="text"
        id="message"
        onkeypress="if(event.keyCode==13){
          send()}"
      />
      <button type="button" id="message-button" onclick="send();">전송</button>
    </div>

    <!-- index.js -->
    <script src="/static/index.js"></script>
